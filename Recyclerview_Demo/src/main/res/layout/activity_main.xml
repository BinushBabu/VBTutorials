<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.vbtutorials.rv_demo.ui.activity.ActivityMain">

    <Button
        android:text="Recyclerview With List"
        android:layout_width="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:id="@+id/bt_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Recyclerview With Grid"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_list"
        android:layout_marginTop="24dp"
        android:id="@+id/bt_grid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Recyclerview With Cardview"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_grid"
        android:layout_marginTop="24dp"
        android:id="@+id/bt_recycler_with_card"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Recyclerview With StaggeredGrid"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_recycler_with_card"
        android:layout_marginTop="24dp"
        android:id="@+id/bt_recycler_with_staggered_grid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
